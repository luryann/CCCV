{
  "manifest_version": 3,
  "name": "CCCV",
  "version": "1.0.0",
  "description": "Disable clipboard hijacking by disabling JavaScript via Chrome Debugger Protocol",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "debugger"
  ],
  "action": {
    "default_icon": {
      "16": "icons/js-enabled-16.png",
      "32": "icons/js-enabled-32.png",
      "48": "icons/js-enabled-48.png",
      "128": "icons/js-enabled-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/js-enabled-16.png",
    "32": "icons/js-enabled-32.png",
    "48": "icons/js-enabled-48.png",
    "128": "icons/js-enabled-128.png"
  }
}
