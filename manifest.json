{
  "manifest_version": 2,
  "name": "JavaScript Toggle",
  "version": "1.0",
  "description": "Enable or disable JavaScript on the current page using Chrome's Debugger API",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "debugger"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon16-gray.png",
      "32": "icons/icon32-gray.png",
      "48": "icons/icon48-gray.png",
      "128": "icons/icon128-gray.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
